# Dockerfile generated by Wildcard
FROM node:12-alpine as build
WORKDIR /app
COPY . .
RUN npm install
RUN npm install @vue/cli@3.7.0 -g
RUN npm run build
#production image
FROM nginx:1.17.1-alpine
WORKDIR /app/run/
COPY --from=build /app/dist /usr/share/nginx/html
ENTRYPOINT ["nginx", "-g", "daemon off;"]
