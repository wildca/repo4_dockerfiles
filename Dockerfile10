FROM node:lts-alpine as build
WORKDIR /app
COPY . .
RUN npm install
RUN npm install @vue/cli@3.7.0 -g
RUN npm run build
#production image
FROM node:carbon-alpine
WORKDIR /app/run/
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 8080
ENTRYPOINT ["nginx", "-g", "daemon off;"]
